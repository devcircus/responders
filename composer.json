{
    "name": "bright-components/responders",
    "description": "Responder Implementation for Laravel Projects",
    "version": "1.0.0-beta.1.4",
    "keywords": [
        "bright-components",
        "responders"
    ],
    "homepage": "https://github.com/bright-components/responders",
    "license": "MIT",
    "authors": [
        {
            "name": "Clayton Stone",
            "email": "clay@phpstage.com",
            "homepage": "https://codestage.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "bright-components/common": "dev-master",
        "laravel/framework": "5.7.* || 5.8.*",
        "devmarketer/laraflash": "1.3.*"
    },
    "require-dev": {
        "mockery/mockery": "0.9.*",
        "orchestra/testbench": "~3.7",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "BrightComponents\\Responder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrightComponents\\Responder\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrightComponents\\Responder\\ResponderServiceProvider"
            ]
        }
    }
}
